<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="TitanProfessions.lua"/>
	<Frame parent="UIParent">
		<Frames>
			<Button name="TitanPanelProfessionsButton" inherits="TitanPanelComboTemplate" frameStrata="FULLSCREEN" toplevel="true">
			    <Scripts>
                    <OnLoad>
					    TitanPanelProfessionsButton_OnLoad(self)
                        TitanPanelButton_OnLoad(self)
                    </OnLoad>                    
                    </Scripts>
			</Button>
		</Frames>
	</Frame>    
    
    <Button name="DisenchantButton" inherits="SecureActionButtonTemplate" parent="UIParent" hidden="true">    
      <Attributes>
        <Attribute name="type" type="string" value="spell"/>
        <Attribute name="spell" type="string" value="Disenchant"/>
        <Attribute name="unit" type="string" value="player"/>
      </Attributes>  
      <Size x="24" y="24"/>
      <Layers>
        <Layer level="OVERLAY">
          <Texture name="$parentIcon" file="Interface\Icons\Inv_enchant_disenchant" setAllPoints="true" />
        </Layer>
      </Layers>
      <Anchors>
        <Anchor point="CENTER" />
      </Anchors>
      <Scripts>
        <OnDoubleClick>
          DisenchantButton:Hide()
        </OnDoubleClick>
      </Scripts>
    </Button>
    
